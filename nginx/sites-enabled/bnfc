upstream bnfc-live {
    server #{bnfc-host-1};
    server #{bnfc-host-2};
    keepalive 32;
}
server {
    listen 80;
    server_name #{bnfc-server-name};
    access_log /var/log/nginx/bnfc.log proxy_log;
    set $geo_redirect https://www.nice.org.uk/bnfc-uk-only;
    set $upstream http://bnfc-live;
    
    include /etc/nginx/geoip/geoip;
}
